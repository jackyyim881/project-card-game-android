<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/card_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Base Gradient -->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:angle="45"
          android:startColor="#FFF9F9F9"
          android:centerColor="#FFEEEEEE"
          android:endColor="#FFFFFFFF"
          android:type="linear"/>
      <corners android:radius="12dp"/>
    </shape>
  </item>

  <!-- Subtle Texture -->
  <item>
    <bitmap
        android:src="@drawable/card_texture"
        android:tileMode="repeat"
        android:alpha="0.1"/>
  </item>

  <!-- Border -->
  <item>
    <shape android:shape="rectangle">
      <stroke
          android:width="2dp"
          android:color="#40000000"/>
      <corners android:radius="12dp"/>
    </shape>
  </item>
</layer-list>