<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/game_button_background.xml -->
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Default state -->
  <item tools:ignore="StateListReachable">
    <shape android:shape="rectangle">
      <solid android:color="#1A1A1A" /> <!-- Dark background -->
      <corners android:radius="8dp" /> <!-- Rounded corners -->
      <stroke android:width="1dp" android:color="#FFD700" /> <!-- Gold border -->
    </shape>
  </item>

  <!-- Pressed state -->
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <solid android:color="#333333" /> <!-- Slightly lighter background -->
      <corners android:radius="8dp" />
      <stroke android:width="1dp" android:color="#FFA500" /> <!-- Orange border -->
    </shape>
  </item>

  <!-- Disabled state -->
  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <solid android:color="#0D0D0D" /> <!-- Darker background -->
      <corners android:radius="8dp" />
      <stroke android:width="1dp" android:color="#808080" /> <!-- Gray border -->
    </shape>
  </item>
</selector>