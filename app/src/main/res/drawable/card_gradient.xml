<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/card_gradient.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

  <!-- Base gradient -->
  <gradient
      android:angle="135"
      android:startColor="#FF6B6B"
      android:centerColor="#FFA500"
      android:endColor="#FF4500"
      android:type="linear"/>

  <!-- Optional: Add corner radius to match CardView -->
  <corners android:radius="12dp"/>

  <!-- Optional: Add stroke border -->
  <stroke
      android:width="1dp"
      android:color="#80FFFFFF"/> <!-- Semi-transparent white -->

</shape>